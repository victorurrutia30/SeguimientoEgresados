@{
    // Título de la página y bandera para ocultar el footer pequeño del _Layout
    ViewBag.Title = "Home";
    ViewBag.HideLayoutFooter = true;
}

<!-- HEADER del homepage (solo visual, no reemplaza la navbar del Layout) -->
<header class="home-header">
    <div class="header-container">
        <!-- Logo: referencia con Url.Content para que funcione en cualquier entorno -->
        <img src="@Url.Content("~/Content/images/logo-utec.png")" alt="UTEC" class="logo" />
    </div>
</header>

<!-- Barra de bienvenida -->
<section class="md_1">
    <h2>Bienvenidos</h2>
</section>

<!-- HERO -->
<section class="hero-banner">
    <img src="@Url.Content("~/Content/images/IMG_P.png")" alt="Banner principal" class="hero-image" />
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="hero-title">Tu Red Profesional de Éxito</h1>
        <p class="hero-subtitle">
            Vuelve a conectar con tus compañeros, explora oportunidades laborales y sigue impulsando tu carrera.
        </p>

        <!-- Botones acción: ya con rutas MVC -->
        <div class="hero-buttons">
            <a class="btn btn-primary" href="@Url.Action("Index","Autenticacion")">Iniciar Sesion</a>
            <a class="btn btn-secondary" href="@Url.Action("Index","Registro")">Registrate</a>
        </div>
    </div>
</section>

<!-- Línea divisoria del color institucional -->
<div class="md_2"></div>

<!-- TARJETAS -->
<section class="cards-section">
    <div class="container">
        <div class="cards-grid">
            <!-- Card 1 -->
            <article class="card">
                <img src="@Url.Content("~/Content/images/IMG1.jpg")" alt="Mantente Conectado" class="card-image" />
                <div class="card-content">
                    <h2 class="card-title">Mantente Conectado</h2>
                    <p class="card-description">
                        El objetivo principal es que los egresados se sientan parte de una comunidad profesional activa.
                    </p>
                </div>
            </article>

            <!-- Card 2 -->
            <article class="card">
                <img src="@Url.Content("~/Content/images/IMG2.jpg")" alt="Oportunidades Profesionales" class="card-image" />
                <div class="card-content">
                    <h2 class="card-title">Oportunidades Profesionales</h2>
                    <p class="card-description">
                        Ofrecer valor tangible que les ayude a avanzar en su carrera.
                    </p>
                </div>
            </article>

            <!-- Card 3 -->
            <article class="card">
                <img src="@Url.Content("~/Content/images/IMG3.jpg")" alt="Apoya a tu Alma Máter" class="card-image" />
                <div class="card-content">
                    <h2 class="card-title">Apoya a tu Alma Máter</h2>
                    <p class="card-description">
                        Para motivar a los egresados a contribuir al desarrollo de la universidad.
                    </p>
                </div>
            </article>
        </div>
    </div>
</section>

<!-- FOOTER grande del homepage (distinto al del Layout) -->
